@model InSelfLove.Web.ViewModels.Home.HomeViewModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    this.ViewData["Title"] = localizer["Home Page"].Value;
}

<!-- Showcase -->
<div id="showcase">
    <div class="dark-overlay text-white">
        <div class="row mx-1">
            <div class="col text-center">
                <div class="showcase-wrapper">
                    <h1>@localizer[$"FEATURED {Model.FeaturedItem.Controller}"]</h1>
                    <h2>
                        @Model.FeaturedItem.Title
                    </h2>
                    <a asp-controller="@Model.FeaturedItem.Controller" asp-action="Single" asp-route-slug="@Model.FeaturedItem.Slug" class="btn btn-outline-light btn-md text-white mt-2 see-more-feature-btn">
                        @localizer["SEE MORE"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main-content">
    <!-- Info Header -->
    <div class="info-header main-info-header row text-center pt-5 my-3 pb-3">
        <h2 class="col subtitle">@localizer["POSTS"]</h2>
    </div>
    <!-- Articles -->
    <div id="home-articles" class="container py-4">
        <div class="row">
            @{ var idx = 0;
                foreach (var article in Model.Articles)
                {
                    if (idx == 2)
                    {

                        <div class="col-lg-4 col-md-6 mb-4">
                            <div>
                                <div class="ratio ratio-16x9">
                                    <img class="img-fluid rounded-circle home-profile-pic"
                                         src="https://res.cloudinary.com/dzcajpx0y/image/upload/w_250,c_scale/v1615058365/popetoCircle_gk8b5i.jpg" alt="Article image">
                                </div>
                                <div class="card-body article-resize">
                                    <div class="text-center">
                                        <h2 class="about-hello-h2">ЗДРАВЕЙ!</h2>
                                    </div>
                                    <p class="about-preview-text mt-3 mb-0">

                                        Мъд­ри­те хора са ка­за­ли, че най-важ­на­та връз­ка е тази, ко­я­то има­ме със себе си. По вре­ме на дъл­го­то ми обу­че­ние за пси­хо­лог и пси­хо­те­ра­певт, тази ми­съл пос­то­ян­но из­ска­ча­ше в мо­и­те ана­ли­зи и ра­бо­та. Осъз­на­вах, че колкото и да изу­ча­вам пси­хич­ни­те раз­стройс­т­ва, тех­ни­те сим­п­то­ми и осо­бе­нос­ти, винаги накрая се сти­га­ше до връз­ката, ко­я­то чо­век има със себе си. И в слу­чая, когато в тази връз­ка ня­ма­ше чес­т­ност, ува­же­ние, раз­би­ра­не, съ­чув­с­т­вие, тър­пе­ние и ло­ял­ност, винаги се сти­га­ше до ня­как­ва па­то­ло­гия. Когато чо­век оп­ра­ве­ше от­но­ше­ни­е­то...

                                    </p>
                                </div>
                                <div class="card-footer about-preview-footer text-center border-0 pb-0">
                                    <a asp-controller="Home" asp-action="About" class="btn white-btn">
                                        @localizer["SEE MORE"]
                                    </a>
                                </div>

                            </div>
                        </div>
                    }
                    <div class="col-lg-4 col-md-6 mb-4">
                        <partial name="_ArticlePreviewPartial" model="@article" />
                    </div>
                    idx++;
                }
            }
        </div>
        <div class="text-center">
            <a asp-controller="Articles" asp-action="Index" class="btn mt-2 white-btn">
                @localizer["SEE MORE"]
            </a>
        </div>
    </div>
    <!-- Videos -->
    <div id="video-carousel" class="container pt-2 mb-4">
        <div class="row">
            <div class="col-sm-8 m-auto">
                <div id="slider" class="carousel slide" data-bs-ride="carousel" data-bs-interval="false">
                    <!-- Arrow controls -->
                    <a href="#slider" class="carousel-control-prev mt-5" data-bs-slide="prev" aria-label="previous video">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a href="#slider" class="carousel-control-next mt-5" data-bs-slide="next" aria-label="next video">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                    <!-- Videos -->
                    <div class="carousel-inner">
                        <partial name="_VideoCarouselPartial" model="Model.Videos" />

                    </div>
                    <!-- Bottom controls -->
                    <ol class="carousel-indicators">
                        <li class="active" data-bs-target="#slider" data-bs-slide-to="0"></li>
                        <li data-bs-target="#slider" data-bs-slide-to="1"></li>
                        <li data-bs-target="#slider" data-bs-slide-to="2"></li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="text-center mt-2">
            <a asp-controller="Videos" asp-action="Index" class="btn my-4 white-btn">
                @localizer["SEE MORE"]
            </a>
        </div>
    </div>
</div>
